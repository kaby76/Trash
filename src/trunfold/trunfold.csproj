<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<PackAsTool>true</PackAsTool>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageReadmeFile>readme.md</PackageReadmeFile>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<AssemblyName>trunfold</AssemblyName>
		<PackageId>trunfold</PackageId>
		<Description>
			<![CDATA[Apply the unfold transform to a collection of terminal nodes
in the parse tree. This program is part of the Trash toolkit.
]]>
		</Description>
		<ToolCommandName>trunfold</ToolCommandName>
		<RootNamespace>trunfold</RootNamespace>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<DebugType>portable</DebugType>
		<DebugSymbols>true</DebugSymbols>
		<Version>0.23.25</Version>
		<RepositoryUrl>https://github.com/kaby76/Trash/tree/main/src/trunfold</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
		<PackageReference Include="CommandLineParser" Version="2.9.1" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="../Globbing/TrashGlobbing.csproj" />
		<ProjectReference Include="../AntlrJson/AntlrJson.csproj" />
		<ProjectReference Include="../ParseTreeEditing/ParseTreeEditing.csproj" />
		<ProjectReference Include="../Logger/Logger.csproj" />
	</ItemGroup>
	<ItemGroup>
		<None Include="readme.md" Pack="true" PackagePath=""/>
	</ItemGroup>
	<PropertyGroup>
		<RestoreProjectStyle>PackageReference</RestoreProjectStyle>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<NoWarn>1701;1702;3021</NoWarn>
	</PropertyGroup>
	<PropertyGroup>
		<PackageReleaseNotes>(Edit readme.md.)</PackageReleaseNotes>
	</PropertyGroup>
	<Target Name="PreparePackageReleaseNotesFromFile" BeforeTargets="GenerateNuspec">
		<ReadLinesFromFile File="readme.md">
			<Output TaskParameter="Lines" ItemName="ReleaseNoteLines" />
		</ReadLinesFromFile>
		<PropertyGroup>
			<PackageReleaseNotes>@(ReleaseNoteLines, '%0a')</PackageReleaseNotes>
		</PropertyGroup>
	</Target>
	<ItemGroup>
		<EmbeddedResource Include="readme.md" />
	</ItemGroup>
</Project>
